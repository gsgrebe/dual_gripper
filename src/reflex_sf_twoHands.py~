#!/usr/bin/env python

import rospy
import roslaunch

def main():
	launcher = roslaunch.ROSLaunch()
	launcher.start()
	
	leftHand = roslaunch.Node(package="reflex_sf", node_type="ReflexSFHands.py", name="reflex_sf_left", args="left", output="screen")
	rightHand = roslaunch.Node(package="reflex_sf", node_type="ReflexSFHands.py", name="reflex_sf_right", args="right", output="screen")
	
	launcher.launch(leftHand)
	launcher.launch(rightHand)
	
	launcher.spin()

if __name__ == '__main__':
	main()